<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>

            <% if (!contact) { %>
                <div class="alert alert-danger" role="alert">
                    A simple danger alert with <br><a href="/contact" class="alert-link fw-normal">&laquo; Back To List Contact</a>
                  </div>
             
            <% }else{ %>
          
             
            
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= contact.nama %></h5>
                  <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.no_Hp %></h6>
                  <p class="card-text"><%= contact.email %></p>
                  
                  <a onclick="return confirm(`Are you sure`);" href="/contact/delete/<%= contact._id.toString() %>" class="btn btn-danger badge"><i class="bi bi-trash2-fill"></i></a>
                  <a onclick="return confirm(`Are you sure`);" href="/contact/edit/<%= contact._id.toString() %>" class="btn btn-info badge"><i class="bi bi-pencil-fill"></i></a>
                  <a href="/contact" class="card-link d-block mt-2">&laquo; Back To Contact List</a>
                 
                </div>
              </div>
        <% } %>
        </div>
    </div>
</div>