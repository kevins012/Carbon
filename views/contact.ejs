
<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Contact List</h2>
            <a href='/contact/add' class="btn btn-success mb-2 fs-11"><i class="bi bi-plus-circle "></i>  Add Data</a>
            <% if (msg.length!==0) { %>
              <div class="alert alert-success" role="alert">
                <%= msg %>
              </div>
            <% } %>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col"><i class="bi bi-plus-circle"></i></th>
                    <th scope="col">Nama</th>
                    <th scope="col">No Hp</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>

                  <% if (contacts.length ===0) { %>
                    <tr>
                      <td colspan="4">
                        <div class="alert alert-danger" role="alert">
                          Contact List is Empty
                        </div>
                      </td>
                    </tr>
                    
                  <% } %>
                  <% contacts.forEach((contact,i) => { %>
                   
                
                  <tr>
                    <th scope="row"><%= i+=1 %></th>
                    <td><%= contact.nama %></td>
                    <td><%= contact.no_Hp %></td>
                    <td><a href='/contact/<%= contact._id %>' class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> Detail</a></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
              
                                    
        </div>                                                                           
    </div>
</div>

   