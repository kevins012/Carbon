<div class="tw-container tw-mx-auto">
    <h1 class="tw-text-2xl tw-font-bold tw-text-center tw-mb-8">Form Update Data Kendaraan</h1>

    <form class="tw-bg-white tw-rounded-lg tw-shadow-lg tw-p-6" method="POST" action="/vehicle/adds/<%= vehicle.id %>" enctype="multipart/form-data">
        <div class="tw-grid tw-grid-cols-1 sm:tw-grid-cols-2 tw-gap-6">

            <div>
                <label for="numberRegistration" class="tw-block tw-text-sm tw-font-medium tw-text-gray-700">Nomor Registrasi</label>
                <input type="text" id="numberRegistration" name="numberRegistration" 
                       value="<%= vehicle.number_registration %>" 
                       class="tw-mt-1 tw-block tw-w-full tw-rounded-md tw-border tw-border-gray-300 tw-p-2 tw-shadow-sm focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500">
            </div>

            <div>
                <label for="vehicle" class="tw-block tw-text-sm tw-font-medium tw-text-gray-700">Kendaraan</label>
                <input type="text" id="vehicle" name="vehicle" 
                       value="<%= vehicle.vehicle %>" 
                       class="tw-mt-1 tw-block tw-w-full tw-rounded-md tw-border tw-border-gray-300 tw-p-2 tw-shadow-sm focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500">
            </div>

            <div>
                <label for="typeVehicle" class="tw-block tw-text-sm tw-font-medium tw-text-gray-700">Tipe Kendaraan</label>
                <select id="typeVehicle" name="typeVehicle" 
                        class="tw-mt-1 tw-block tw-w-full tw-rounded-md tw-border tw-border-gray-300 tw-p-2 tw-shadow-sm focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500">
                    <option value="">Pilih Tipe</option>
                    <option value="Sedan" <%= vehicle.type_vehicle === 'Sedan' ? 'selected' : '' %>>Sedan</option>
                    <option value="Hatchback" <%= vehicle.type_vehicle === 'Hatchback' ? 'selected' : '' %>>Hatchback</option>
                    <option value="SUV" <%= vehicle.type_vehicle === 'SUV' ? 'selected' : '' %>>SUV (Sport Utility Vehicle)</option>
                    <!-- Tambahkan opsi lainnya -->
                </select>
            </div>

            <div>
                <label for="transmissionType" class="tw-block tw-text-sm tw-font-medium tw-text-gray-700">Transmisi</label>
                <select id="transmissionType" name="transmissionType" 
                        class="tw-mt-1 tw-block tw-w-full tw-rounded-md tw-border tw-border-gray-300 tw-p-2 tw-shadow-sm focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500">
                    <option value="">Pilih Transmisi</option>
                    <option value="Manual" <%= vehicle.transmission_type === 'Manual' ? 'selected' : '' %>>Manual Transmission (MT)</option>
                    <option value="Automatic" <%= vehicle.transmission_type === 'Automatic' ? 'selected' : '' %>>Automatic Transmission (AT)</option>
                    <!-- Tambahkan opsi lainnya -->
                </select>
            </div>

            <div>
                <label for="lastOilChangeDate" class="tw-block tw-text-sm tw-font-medium tw-text-gray-700">Tanggal Ganti Oli</label>
                <input type="date" id="lastOilChangeDate" name="lastOilChangeDate" 
                       value="<%= last_oil_change_date %>" 
                       class="tw-mt-1 tw-block tw-w-full tw-rounded-md tw-border tw-border-gray-300 tw-p-2 tw-shadow-sm focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500">
            </div>

            <div>
                <label for="fuel" class="tw-block tw-text-sm tw-font-medium tw-text-gray-700">BBM</label>
                <select id="fuel" name="fuel" 
                        class="tw-mt-1 tw-block tw-w-full tw-rounded-md tw-border tw-border-gray-300 tw-p-2 tw-shadow-sm focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500">
                    <optgroup label="Bensin">
                        <option value="Pertalite" <%= vehicle.fuel === 'Pertalite' ? 'selected' : '' %>>Pertalite (RON 90)</option>
                        <option value="Pertamax" <%= vehicle.fuel === 'Pertamax' ? 'selected' : '' %>>Pertamax (RON 92)</option>
                    </optgroup>
                    <optgroup label="Diesel">
                        <option value="Solar" <%= vehicle.fuel === 'Solar' ? 'selected' : '' %>>Solar/Biosolar</option>
                    </optgroup>
                </select>
            </div>

            <div>
                <label for="cylinderVolume" class="tw-block tw-text-sm tw-font-medium tw-text-gray-700">Volume Silinder (cc)</label>
                <input type="number" id="cylinderVolume" name="cylinderVolume" 
                       value="<%= vehicle.cylinder_volume %>" 
                       class="tw-mt-1 tw-block tw-w-full tw-rounded-md tw-border tw-border-gray-300 tw-p-2 tw-shadow-sm focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500">
            </div>

            <div>
                <label for="descriptionVehicle" class="tw-block tw-text-sm tw-font-medium tw-text-gray-700">Deskripsi Kendaraan</label>
                <textarea id="descriptionVehicle" name="descriptionVehicle" rows="3"
                          class="tw-mt-1 tw-block tw-w-full tw-rounded-md tw-border tw-border-gray-300 tw-p-2 tw-shadow-sm focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500"><%= vehicle.description_vehicle %></textarea>
            </div>

            <div>
                <label for="vehiclePhoto" class="tw-block tw-text-sm tw-font-medium tw-text-gray-700">Foto Kendaraan</label>
                <input type="file" id="vehiclePhoto" name="vehiclePhoto" accept="image/*"
                       class="tw-mt-1 tw-block tw-w-full tw-rounded-md tw-border tw-border-gray-300 tw-p-2 tw-shadow-sm focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500">
                <small class="tw-text-gray-600">Foto saat ini: <%= vehicle.vehicle_photo || 'Belum ada foto' %></small>
            </div>
            <div>
                
                <label for="serviceDate" class="tw-block tw-text-sm tw-font-medium tw-text-gray-700">Tanggal Servis</label>
                <input value="<%= serviceDate  %>"  type="date" id="serviceDate" name="serviceDate"
                       class="tw-mt-1 tw-block tw-w-full tw-rounded-md tw-border tw-border-gray-300 tw-p-2 tw-shadow-sm focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500">
            </div>
        </div>

        </div>

        <div class="tw-mt-6">
            <button type="submit" class="tw-w-full tw-p-3 tw-bg-blue-600 tw-text-white tw-font-semibold tw-rounded-md hover:tw-bg-blue-700 focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500 focus:tw-ring-opacity-50">Update Data</button>
        </div>
    </form>
</div>
